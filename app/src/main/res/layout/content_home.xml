<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:weightSum="1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_home" tools:context=".Home">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:id="@+id/home"
        android:layout_weight="0.4"
        android:layout_alignParentTop="true"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:background="@drawable/layout_gradient"
        android:layout_height="wrap_content" >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/logo3"/>
      <!--  <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Kigamboni Bridge"
            android:gravity="center"
            android:textColor="#004d40"
            android:id="@+id/textView48"
            android:paddingTop="20dp"
            android:paddingBottom="10dp"
            android:textStyle="bold|italic"
            android:textSize="35dp"
            android:fontFamily="sans-serif-thin"
            android:typeface="serif" />-->
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mainContent"
        android:layout_weight="0.5"
        android:weightSum="1">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:gravity="center">

           <!-- <Button
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:text="Bridge Situation"
                android:id="@+id/btnSituation"
                android:layout_margin="10dp"
                android:background="@drawable/change_button_0n_pressed"
                android:textColor="#000000"
                android:textAllCaps="false"
                android:drawableBottom="#ff0c"
                android:drawableTop="@drawable/bridge"
                android:clickable="true"
                android:typeface="serif" />
-->
         <!--   <Button
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:text="Traffic News"
                android:id="@+id/btnNews"
                android:layout_margin="10dp"
                android:background="@drawable/change_button_0n_pressed"
                android:textColor="#000000"
                android:textAllCaps="false"
                android:drawableTop="@drawable/traffic"
                android:clickable="true"
                android:typeface="serif" />-->

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:id="@+id/btnSituation"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView3"
                    android:background="@drawable/bridge"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Bridge Situation"
                    android:id="@+id/textView48" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:id="@+id/btnNews"
                android:layout_height="wrap_content" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView6"
                    android:background="@drawable/traffic"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Traffic News"
                    android:id="@+id/textView49" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:text="Package Payment"
                android:id="@+id/btnPayment"
                android:background="@drawable/change_button_0n_pressed"
                android:layout_margin="10dp"
                android:textColor="#000000"
                android:textAllCaps="false"
                android:drawableTop="@drawable/money"
                android:clickable="true"
                android:typeface="serif" />

            <Button
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:text="Others"
                android:id="@+id/btnOthers"
                android:background="@drawable/change_button_0n_pressed"
                android:layout_margin="10dp"
                android:textAllCaps="false"
                android:drawableTop="@drawable/others"
                android:clickable="true"
                android:typeface="serif" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/tvHome"
            android:enabled="false" />

    </LinearLayout>

    <include layout="@layout/footer" />

</LinearLayout>
